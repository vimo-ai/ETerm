{
    "id": "com.eterm.translation",
    "name": "语言工具",
    "version": "0.0.1-beta.1",
    "minHostVersion": "0.0.1-beta.1",
    "sdkVersion": "0.0.1-beta.1",
    "runMode": "main",
    "dependencies": [],
    "capabilities": [
        "ui.sidebar",
        "ui.infoPanel",
        "ui.pageBar",
        "ui.composer",
        "selection.registerAction",
        "command.register",
        "keyboard.bind"
    ],
    "principalClass": "TranslationPlugin",
    "sidebarTabs": [
        {
            "id": "grammar-archive",
            "title": "语法档案",
            "icon": "doc.text.fill",
            "viewClass": "GrammarArchiveView",
            "order": 200
        },
        {
            "id": "translation-settings",
            "title": "翻译配置",
            "icon": "gearshape.fill",
            "viewClass": "TranslationSettingsView",
            "order": 210
        },
        {
            "id": "vocabulary",
            "title": "单词本",
            "icon": "book.fill",
            "viewClass": "VocabularyView",
            "order": 211
        }
    ],
    "infoPanelContents": [
        {
            "id": "translation",
            "title": "翻译",
            "viewClass": "TranslationContentView"
        }
    ],
    "pageBarItems": [
        {
            "id": "translation-mode-toggle",
            "viewClass": "TranslationModeToggleView"
        }
    ],
    "commands": [
        {
            "id": "translation.toggle",
            "title": "切换翻译模式",
            "handler": "handleTranslationToggle",
            "keyBinding": "Cmd+Shift+Y"
        }
    ],
    "subscribes": [
        "terminal.didEndSelection"
    ],
    "emits": []
}
